---
// Campaigns / Advocacy Areas component
const campaigns = [
  {
    title: "Educación Inclusiva",
    description:
      "Promovemos políticas educativas que respeten la diversidad sexual y de género en todos los niveles de enseñanza.",
    icon: "book",
  },
  {
    title: "Salud Integral",
    description:
      "Abogamos por un sistema de salud que atienda las necesidades específicas de las personas LGBTIQ+.",
    icon: "heart",
  },
  {
    title: "Derechos Laborales",
    description:
      "Trabajamos por ambientes laborales libres de discriminación y con igualdad de oportunidades.",
    icon: "briefcase",
  },
];
---

<section id="campanas" class="section bg-neutral-50 dark:bg-neutral-950">
  <div class="container-wide">
    <div class="mb-8 text-center">
      <h2 class="heading-2">Áreas de incidencia</h2>
      <p class="lead mt-2">
        Incidimos en políticas públicas para garantizar derechos y dignidad
      </p>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        campaigns.map((campaign) => (
          <article class="card overflow-hidden p-0">
            <div class="aspect-[16/9] overflow-hidden bg-gradient-to-br from-brand-500 to-brand-700">
              <div class="flex h-full items-center justify-center">
                {campaign.icon === "book" && (
                  <svg
                    class="h-16 w-16 text-white opacity-50"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    />
                  </svg>
                )}
                {campaign.icon === "heart" && (
                  <svg
                    class="h-16 w-16 text-white opacity-50"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                    />
                  </svg>
                )}
                {campaign.icon === "briefcase" && (
                  <svg
                    class="h-16 w-16 text-white opacity-50"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                )}
              </div>
            </div>
            <div class="p-6">
              <h3 class="mb-2 font-semibold">{campaign.title}</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                {campaign.description}
              </p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
