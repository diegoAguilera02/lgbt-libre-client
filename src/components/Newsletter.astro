---
// Newsletter subscription component
---

<section id="newsletter" class="section bg-neutral-50 dark:bg-neutral-950">
  <div class="container-narrow text-center">
    <h2 class="heading-2">Contáctenos</h2>
    <p class="lead mt-2">
      ¿Tienes alguna consulta o quieres conocer más sobre nuestro trabajo?
      Completa el formulario y nos pondremos en contacto contigo.
    </p>

    <form
      class="mx-auto mt-6 max-w-md"
      method="POST"
      id="newsletter-form"
    >
      <div class="space-y-3">
        <input
          type="text"
          name="nombre"
          id="nombre"
          class="w-full rounded-md border-neutral-300 shadow-sm focus:border-brand-500 focus:ring-brand-500 dark:border-neutral-700 dark:bg-neutral-900"
          placeholder="Nombre *"
          required
          aria-label="Nombre"
        />
        <input
          type="tel"
          name="telefono"
          id="telefono"
          class="w-full rounded-md border-neutral-300 shadow-sm focus:border-brand-500 focus:ring-brand-500 dark:border-neutral-700 dark:bg-neutral-900"
          placeholder="Teléfono (opcional)"
          aria-label="Teléfono"
        />
        <input
          type="email"
          name="email"
          id="email"
          class="w-full rounded-md border-neutral-300 shadow-sm focus:border-brand-500 focus:ring-brand-500 dark:border-neutral-700 dark:bg-neutral-900"
          placeholder="Correo electrónico *"
          required
          aria-label="Correo electrónico"
        />
        <button type="submit" class="btn-primary w-full" id="submit-btn">
          <span id="submit-text">Enviar mensaje</span>
          <span id="submit-loading" class="hidden">Enviando...</span>
        </button>
      </div>
      <p class="mt-3 text-xs text-neutral-500">
        * Campos requeridos. Responderemos a tu consulta a la brevedad.
      </p>

      <!-- Mensaje de éxito -->
      <div id="success-message" class="mt-4 hidden rounded-lg bg-verde-50 p-4 text-verde-800 dark:bg-verde-900/20 dark:text-verde-200">
        <p class="font-medium">¡Mensaje enviado con éxito!</p>
        <p class="text-sm">Nos pondremos en contacto contigo pronto.</p>
      </div>

      <!-- Mensaje de error -->
      <div id="error-message" class="mt-4 hidden rounded-lg bg-red-50 p-4 text-red-800 dark:bg-red-900/20 dark:text-red-200">
        <p class="font-medium">Error al enviar el mensaje</p>
        <p class="text-sm" id="error-text">Por favor intenta de nuevo.</p>
      </div>
    </form>
  </div>
</section>

<script>
  const form = document.getElementById("newsletter-form") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const submitText = document.getElementById("submit-text") as HTMLSpanElement;
  const submitLoading = document.getElementById("submit-loading") as HTMLSpanElement;
  const successMessage = document.getElementById("success-message") as HTMLDivElement;
  const errorMessage = document.getElementById("error-message") as HTMLDivElement;
  const errorText = document.getElementById("error-text") as HTMLParagraphElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Ocultar mensajes previos
    successMessage.classList.add("hidden");
    errorMessage.classList.add("hidden");

    // Mostrar loading
    submitBtn.disabled = true;
    submitText.classList.add("hidden");
    submitLoading.classList.remove("hidden");

    const formData = new FormData(form);
    const data = {
      nombre: formData.get("nombre") as string,
      telefono: formData.get("telefono") as string,
      email: formData.get("email") as string,
    };

    try {
      const response = await fetch("/api/newsletter", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok && result.success) {
        // Mostrar mensaje de éxito
        successMessage.classList.remove("hidden");
        form.reset();
      } else {
        // Mostrar mensaje de error
        errorText.textContent = result.message || "Por favor intenta de nuevo.";
        errorMessage.classList.remove("hidden");
      }
    } catch (error) {
      console.error("Error:", error);
      errorText.textContent = "Error de conexión. Por favor intenta de nuevo.";
      errorMessage.classList.remove("hidden");
    } finally {
      // Restaurar botón
      submitBtn.disabled = false;
      submitText.classList.remove("hidden");
      submitLoading.classList.add("hidden");
    }
  });
</script>
