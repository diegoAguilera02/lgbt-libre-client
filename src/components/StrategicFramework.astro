---
const mission =
  "Ser un equipo multidisciplinario de activistas por las diversidades y disidencias sexuales, que busca promover espacios seguros de vinculación, toma de reivindicación de derechos de las personas LGBTIQA+ en la región de Antofagasta.";

const desafios = [
  {
    text: "Desarrollar y coordinar programas para mejorar la calidad de vida de la comunidad LGBTIQA+ en los espacios laborales, educacionales, salud y social.",
    icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
  },
  {
    text: "Poder ser un apoyo fundamental en los procesos de salud y bienestar, así como el mismo proteger el derecho de vivir una vida libre de violencia.",
    icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
  },
];

const objetivos = [
  {
    text: "Fomentar la visibilidad, la participación activa y la comunidad, promoviendo el respeto por los derechos humanos y combatiendo la discriminación y la violencia estructural que afecta a las diversidades y disidencias.",
    icon: "M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
  },
  {
    text: "Educar a la población sobre ESI (Educación Sexual Integral) diversa y sobre los prejuicios, estereotipos de género y diversidad sexual.",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
  },
];
---

<section id="marco-estrategico" class="section">
  <div class="container-narrow space-y-12">
    <!-- Header -->
    <div class="space-y-4 text-center">
      <div class="inline-flex items-center gap-2 rounded-full bg-brand-100 px-4 py-2 text-sm font-medium text-brand-700 dark:bg-brand-900/30 dark:text-brand-300">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
        </svg>
        Marco estratégico
      </div>
      <h2 class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 sm:text-4xl">
        Nuestra guía de <span class="bg-gradient-to-r from-brand-600 to-brand-500 bg-clip-text text-transparent dark:from-brand-400 dark:to-brand-300">acción</span>
      </h2>
    </div>

    <!-- Misión destacada -->
    <div class="relative overflow-hidden rounded-2xl border border-brand-200 bg-gradient-to-br from-brand-50 to-brand-100/50 p-8 shadow-lg dark:border-brand-800 dark:from-brand-950 dark:to-brand-900/50 md:p-10">
      <div class="absolute right-0 top-0 h-40 w-40 -translate-y-10 translate-x-10 rounded-full bg-brand-200/30 blur-3xl dark:bg-brand-800/30" aria-hidden="true"></div>
      <div class="relative space-y-4">
        <div class="flex items-center gap-3">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-brand-600 text-white dark:bg-brand-500">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-900 dark:text-brand-50">Misión</h3>
        </div>
        <p class="text-lg leading-relaxed text-neutral-800 dark:text-neutral-200">{mission}</p>
      </div>
    </div>

    <!-- Desafíos y Objetivos Grid -->
    <div class="grid gap-8 lg:grid-cols-2">
      <!-- Desafíos -->
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-600 text-white dark:bg-brand-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-50">
            Desafíos
          </h3>
        </div>
        <div class="space-y-4">
          {desafios.map((desafio) => (
            <div class="group card-hover flex gap-4 rounded-xl border border-neutral-200 bg-white p-5 dark:border-neutral-800 dark:bg-neutral-900/50">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-brand-100 text-brand-600 transition-colors group-hover:bg-brand-600 group-hover:text-white dark:bg-brand-900/30 dark:text-brand-400 dark:group-hover:bg-brand-600">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={desafio.icon} />
                </svg>
              </div>
              <p class="text-sm leading-relaxed text-neutral-700 dark:text-neutral-300">
                {desafio.text}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Objetivos -->
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-600 text-white dark:bg-brand-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-50">
            Objetivos
          </h3>
        </div>
        <div class="space-y-4">
          {objetivos.map((objetivo) => (
            <div class="group card-hover flex gap-4 rounded-xl border border-neutral-200 bg-white p-5 dark:border-neutral-800 dark:bg-neutral-900/50">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-brand-100 text-brand-600 transition-colors group-hover:bg-brand-600 group-hover:text-white dark:bg-brand-900/30 dark:text-brand-400 dark:group-hover:bg-brand-600">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={objetivo.icon} />
                </svg>
              </div>
              <p class="text-sm leading-relaxed text-neutral-700 dark:text-neutral-300">
                {objetivo.text}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
