// News section component
const news = [
  {
    date: "2025-10-24",
    dateDisplay: "24 octubre, 2025",
    title: "Avances en políticas de inclusión laboral LGBTIQ+",
    excerpt:
      "Nuevas empresas se suman al compromiso de crear ambientes laborales inclusivos y libres de discriminación.",
    link: "#",
  },
  {
    date: "2025-10-09",
    dateDisplay: "9 octubre, 2025",
    title: "Charla educativa sobre diversidad en colegios",
    excerpt:
      "Exitosa jornada de sensibilización con más de 500 estudiantes y profesores participando activamente.",
    link: "#",
  },
  {
    date: "2025-08-25",
    dateDisplay: "25 agosto, 2025",
    title: "Nuevos recursos para comunidad trans",
    excerpt:
      "Lanzamos una guía completa con información sobre el proceso de rectificación de nombre y género en Chile.",
    link: "#",
  },
];
---

<section id="noticias" class="section">
  <div class="container-wide">
    <div class="mb-8 flex items-end justify-between">
      <div>
        <h2 class="heading-2">Noticias</h2>
        <p class="lead mt-2">Mantente informado sobre nuestro trabajo</p>
      </div>
      <a
        href="https://iguales.cl/noticias/"
        class="text-sm font-medium text-brand-700 hover:underline dark:text-brand-300"
      >
        Ver todas →
      </a>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        news.map((article) => (
          <article class="card">
            <div class="mb-3 flex items-center gap-3 text-xs text-neutral-500 dark:text-neutral-400">
              <time datetime={article.date}>{article.dateDisplay}</time>
            </div>
            <h3 class="mb-2 font-semibold">{article.title}</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300">
              {article.excerpt}
            </p>
            <a
              class="mt-3 inline-flex items-center text-sm font-medium text-brand-700 hover:underline dark:text-brand-300"
              href={article.link}
            >
              Leer más →
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>
